/* why are command-entry and search entry separate classes anyways? */
.text-view, .command-entry, .search-entry, .text-entry, .suggestions-popup
{
	color: rgb(190, 190, 190);
	font: Fira Mono Medium 12;
} 

.text-view
{
	background: rgb(45, 45, 55);
}
.command-entry, .search-entry
{
	background: rgb(65, 65, 75);

	border: none;
	border-radius: 0;
}

.text-entry
{
	border: none;
	border-radius: 0;

	background: rgb(65, 65, 75);
	color: rgb(190, 190, 190);

	/*padding: 3px;*/
}
/*
GtkTextView:selected,
.search-entry:selected,
.command-entry:selected,
.text-entry:selected
{
	color: white;
	background: red;
}
*/
#search-revealer > GtkEntry:selected, #command-revealer > GtkEntry:selected, GtkTextView:selected
{
	color: white;
	background: red;
}
/*
:focus pseudoclass conflicts with :selected pseudoclass (?)
Should we target these widgets in a different way?
*/

.command-entry:focus, .search-entry:focus, .text-entry:focus
{
	background: rgb(85, 85, 95);
}

.main-notebook
{
	border: none;
	border-radius: 0px;

	/*background: rgb(45, 45, 55);*/
}

.main-notebook tab
{
	padding: 10px 16px;

	background: rgb(25, 25, 35);
}

.main-notebook tab:active
{
	background: rgb(45, 45, 55);
}

.sidebar-notebook
{
	color: rgb(190, 190, 190);
	border: none;
	border-radius: 0px;
	/*background: rgb(45, 45, 55);*/
}

.sidebar-notebook tab
{
	padding: 10px 16px;
	background: rgb(25, 25, 35);
}

.sidebar-notebook tab:active
{
	background: rgb(45, 45, 55);
}

