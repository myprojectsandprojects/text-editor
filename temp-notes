highlighting_set(tab, highlighting){
	if /* handlers not registered */ {
		// register handlers
	}

	delete_all_tags(tab)

	create_tags(tab, highlighting)

	hl_func = get_highlighting_func(highlighting)
	if hl_func {
		hl_func(NULL)
	}
}